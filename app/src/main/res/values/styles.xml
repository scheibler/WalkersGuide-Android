<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- default font size and color -->
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/text</item>
        <!-- style to prevent all-caps on buttons -->
        <item name="buttonStyle">@style/NoAllCapsButton</item>
    </style>

    <style name="NoAllCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="HeadingTextView" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">@dimen/minHeight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme" >
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
