<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activityMargin"
    android:orientation="vertical" >

    <include
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <org.walkersguide.android.ui.view.TextViewAndActionButton
            android:id="@+id/layoutSelectedSegment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:compact="true" />

        <TextView
            android:id="@+id/labelSegmentDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:focusable="true" />

        <include
            layout="@layout/layout_default_divider" />
    </LinearLayout>

    <include
        layout="@layout/layout_view_pager_and_tab_layout" />

</LinearLayout>
