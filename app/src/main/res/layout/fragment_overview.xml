<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <!-- bottom -->

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonHistory" />
    </LinearLayout>


    <!-- main -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutBottom"
        android:orientation="vertical" >

        <org.walkersguide.android.ui.view.ResolveCurrentAddressView
            android:id="@+id/layoutClosestAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/labelPinnedPointsHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:focusable="true"
                android:theme="@style/HeadingTextView" />

            <ImageButton
                android:id="@+id/buttonAddPinnedPoint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/minWidth"
                android:minHeight="@dimen/minHeight"
                android:background="@null"
                app:tint="@color/image"
                android:src="@drawable/image_add"
                android:contentDescription="@string/buttonAddPinnedPoint" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewPinnedPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/divider"
            android:dividerHeight="@dimen/listDividerHeight" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

            <TextView
                android:id="@+id/labelEmptyListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/minHeight"
                android:focusable="true" />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
