<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/buttonDecreaseSpeechRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                app:tint="@color/image"
                android:src="@drawable/image_arrow_back"
                android:contentDescription="@string/buttonDecreaseSpeechRate" />

            <TextView
                android:id="@+id/labelSpeechRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:minHeight="@dimen/minHeight"
                android:gravity="center_horizontal"
                android:textSize="@dimen/bigTextSize"
                android:accessibilityLiveRegion="polite"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/buttonIncreaseSpeechRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                app:tint="@color/image"
                android:src="@drawable/image_arrow_forward"
                android:contentDescription="@string/buttonIncreaseSpeechRate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSpeechRatePresets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

    </LinearLayout>
</ScrollView>
